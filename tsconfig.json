{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "public/js",
        "listEmittedFiles": true,
    },
    "exclude": [
        "node_modules",
        ".npm"
    ]
}